<div class="form-container radius-box glassy-bg small-10 small-centered medium-8 large-6 columns">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb1"><%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Password", class: "radius" %></div>

    <div class="mb1"><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", class: "radius" %></div>

    <div><%= f.submit "Change my password", class: "button" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
